<project default="build-parsers">
	
	<target name="build-parsers">
		<mkdir dir="${basedir}/src/javacc/cc/warlock/core/stormfront/internal"/>
		<antcall target="javacc">
			<param name="arguments" value="-OUTPUT_DIRECTORY:${basedir}/src/javacc/cc/warlock/core/stormfront/internal -STATIC:false"/>
			<param name="grammar-file" value="${basedir}/src/main/cc/warlock/core/stormfront/internal/stormfront.jj"/>
		</antcall>
	</target>
	
	<target name="javacc">
		<java classname="javacc">
			<classpath>
				<fileset file="lib/javacc.jar"/>
			</classpath>
			<arg line="${arguments}"/>
			<arg line="${grammar-file}"/>
		</java>
	</target>
</project>