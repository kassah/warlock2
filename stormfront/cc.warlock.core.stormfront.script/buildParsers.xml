<project default="build-parsers">
	
	<target name="build-parsers">
		<mkdir dir="${basedir}/src/antlr/cc/warlock/core/stormfront/script/wsl"/>
		
		<antcall target="build-grammar">
			<param name="grammar-file" value="${basedir}/src/main/cc/warlock/core/stormfront/script/wsl/WSL.g"/>
			<param name="lib-dir" value="cc/warlock/core/stormfront/script/wsl"/>
		</antcall>
	</target>
	
	<target name="build-grammar" >
		<java classname="org.antlr.Tool" fork="true" dir="${basedir}/src/main">
			<classpath>
				<fileset dir="lib">
					<include name="antlr-3.2.jar"/>
				</fileset>
			</classpath>
			<jvmarg line="-Xmx512m -XX:MaxPermSize=128m"/>
			<arg line="-o ${basedir}/src/antlr/${lib-dir}"/>
			<arg line="-lib ${lib-dir}"/>
			<arg line="-verbose"/>
			<arg line="-report"/>
			<arg value="${grammar-file}"/>
		</java>
	</target>
</project>